{
  "productName": "PEXScanner",
  "version": "../package.json",
  "identifier": "com.tauri.pexscanner",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev:server",
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000"
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "app"],
    "icon": ["icons/icon.ico"]
  },
  "app": {
    "windows": [
      {
        "title": "PEX Scanner Tool",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
